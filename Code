from pygame import *
from random import randint
from time import time as timer


win_height = 500
win_width = 700
window = display.set_mode((700,500))
display.set_caption("Ping-Pong")
game = True

while game:
    
    for e in event.get():
        if e.type == QUIT:
            game = False
    
    display.update()
    clock.tick(FPS)
